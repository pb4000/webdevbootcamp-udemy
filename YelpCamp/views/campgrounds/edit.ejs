<%- include("../partials/header") %>
<div class="container my-5 d-flex flex-column justify-content-center align-items-center">
    <h1 class="display-4 mt-5 text-center">Editing <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="d-flex flex-column align-items-center my-3"
        style="width: 40%;">
        <input type="text" name="campground[name]" placeholder="Name" value="<%= campground.name %>" class="my-2" style="width: 80%;">
        <input type="text" name="campground[image]" placeholder="Image URL" value="<%= campground.image %>" class="my-2" style="width: 80%;">
        <textarea name="campground[description]" placeholder="Description" value="" class="my-2" style="width: 100%; height: 15rem;">
            <%= campground.description %></textarea>
        <div class="my-2 d-flex justify-content-center">
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-danger btn-md mx-2">Go Back</a>
            <button class="btn btn-success btn-md mx-2">Submit</button>
        </div>
    </form>
</div>

<%- include("../partials/footer") %>