<%- include("partials/header") %>
<div class="container my-5 d-flex flex-column justify-content-center align-items-center">
    <h1 class="display-4 mt-5 text-center">Create a New Campsite</h1>

    <form action="/campgrounds" method="post" class="d-flex flex-column align-items-center my-3"
        style="width: 40%;">
        <input type="text" name="name" placeholder="Name" class="my-2" style="width: 80%;">
        <input type="text" name="image" placeholder="Image URL" class="my-2" style="width: 80%;">
        <input type="text" name="description" placeholder="Description" class="my-2" style="width: 80%;">
        <div class="my-2 d-flex justify-content-center">
            <a href="/campgrounds" class="btn btn-danger btn-md mx-2">Go Back</a>
            <button class="btn btn-success btn-md mx-2">Submit</button>
        </div>
    </form>
</div>

<%- include("partials/footer") %>