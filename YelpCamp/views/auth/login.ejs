<%- include("../partials/header") %>
<div class="container my-5 d-flex flex-column justify-content-center align-items-center">
    <h1 class="display-4 mt-5 text-center">Login</h1>

    <form action="/login" method="post" class="d-flex flex-column align-items-center my-3" style="width: 40%;">
        <input type="text" name="username" placeholder="username" class="my-2" style="width: 60%;">
        <input type="password" name="password" placeholder="password" class="my-2" style="width: 60%;">
        <div class="my-2 d-flex justify-content-center">
            <button class="btn btn-success btn-md mx-2">Login</button>
        </div>
    </form>
</div>

